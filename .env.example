# Twitter API Configuration
# Get these from https://developer.x.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Ollama Configuration
# Install Ollama from https://ollama.ai/ and run: ollama serve
OLLAMA_BASE_URL=http://your_ollama_server_ip
OLLAMA_MODEL=llama3.2:latest
# OLLAMA_MODEL=qwen2.5:3b

# Groq Configuration
# Get API key from https://console.groq.com/
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
# GROQ_MODEL=llama-3.1-70b-versatile

# Vision Models Configuration
# Vision model for image analysis (must be compatible with Ollama)
VISION_MODEL=llava:7b
# VISION_MODEL=llava:latest

# YOLO Model Configuration
# Path to YOLO model file (will be downloaded automatically if not exists)
YOLO_MODEL=./yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5

# Database Configuration (Not used in the current version)
# DATABASE_PATH=
# REDIS_URL=redis://localhost:6379

# Optional, for enhanced search (Not used in the current version)
# TAVILY_API_KEY=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/xlytics.log

# Output Configuration
OUTPUT_NAME="your_output_name_here"